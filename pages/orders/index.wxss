page{
  background-color: #e5e5e5;
  
}

.top_tab{
  width:50%;
  height:95rpx;
  float:left;
  line-height:100rpx;
  color:#666666;
}
.top_tab_selected{
  width:50%;
  height:95rpx;
  float:left;
  line-height:100rpx;
  color:#ED1C24;
  border-bottom:5rpx #ED1C24 solid;
}

.top_tab_view{
  width:100%;
  height:100rpx;
  text-align:center;
  font-size:14px;
  background-color:white;
}


.viewlist{
  background-color:#ffffff;
  margin-top:20rpx;
  width:96%;
  margin-left:2%;
  border-radius:16rpx;
}

.view_img{
  width:12px;
  height:12px;
  padding-left:10px;
}


.viewtitle{
  color:#666666;
  font-size: 14px;
  height: 22px;
  line-height: 22px;
  padding:4px 0;
  overflow: hidden;
}

.viewlabel{
  color:#666666;
  padding-left:10px;
}

.line{
margin: 0 auto;
width: 100%;
height: 1rpx;
background-color: #E8E8E8;
}

.viewbold{
  color:#666666;
  font-weight: bold;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  padding:4px 0;
  padding-left:15px;
  position: relative;
}

.span_right::after{content:" ";
display:inline-block;
width:6px;height:6px;
position:absolute;top:50%;
right:15px;border-width:2px 2px 0 0;
border-color:#dddee1;border-style:solid;
transform:translateY(-50%) matrix(.71,.71,-.71,.71,0,0)}